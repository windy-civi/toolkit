  "legislative_session": "153",
  "identifier": "SB 79",
  "title": "AN ACT TO AMEND TITLE 13 OF THE DELAWARE CODE RELATING TO TERMINATION OF PARENTAL RIGHTS AND ADOPTION PROCEEDINGS.",
  "from_organization": "~{\"classification\": \"upper\"}",
  "classification": [
    "bill"
